/* pages/anwserList/anwserList.wxss */

/*list*/
.list-box{
    padding: 10px;
    box-sizing: content-box;
}
.list{
    padding: 0 8px;
}
.list-item{
    display: flex;
    flex-direction: column;
    padding: 0 14px;
    border-radius: 0;
}
.list-item:not(:last-child){
    border-bottom: 1px solid #dee1e6;
}
.item-top{
    display: flex;
    align-items: center;
}
.name{
    display: inline-block;
    width: 32px;
    text-align: center;
    line-height: 46px;
    color: #201f24;
    font-size: 16px;
}
.iconfont{
    margin-left: auto;
    font-size: 22px;
    transition : transform .3s
}
.ml{
    margin-left: 50px;
}
.rotate{
    transform: rotate(90deg);
}

/*nav*/
.nav{
    display: flex;
    background: white;
    border-bottom: 1px solid #f0f0f0;
}
.nav div{
    width: 50%;
    text-align: center;
    line-height: 48px;
    position: relative;
}
.nav div.on{
    color: #7aa4f8;
}
.nav div.on .line-bottom{
    transform:scale(1,1);
    transition: all 0.3s ease;
}
.nav div .line-bottom{
    height: 2px;
    width: 100%;
    background: #7aa4f8;
    position: absolute;
    bottom: 0;
    left: 0;
    transform:scale(0,0);
}